{
    "productName": "NewsBuddy",
    "appId": "com.lachlan-bruce.myapp",
    "files": ["dist-electron", "dist-react", "src/ui/assets"],
    "icon": "src/ui/assets/logo.png",
    "extraResources": ["dist-electron/preload.cjs", "src/ui/assets/logo.png", ".env"],
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": "nsis"
    },
    "nsis": {
        "deleteAppDataOnUninstall": true,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "oneClick": false
    }
}