{
    "productName": "NewsBuddy",
    "appId": "com.lachlan-bruce.myapp",
    "files": [
        "dist-electron",
        "dist-react"
    ],
    "icon": "src/electron/assets/icon.ico",
    "extraResources": [
        "dist-electron/preload.cjs",
        ".env"
    ],
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": "nsis"
    },
    "nsis": {
        "deleteAppDataOnUninstall": true,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "oneClick": false,
        "artifactName": "${productName} Setup.${ext}",
        "include": "scripts/installer.nsh"
    }
}